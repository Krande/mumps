{
  "version": 6,
  "include": [
    ".env.json"
  ],
  "configurePresets": [
    {
      "name": "default",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "BUILD_SINGLE": false,
        "BUILD_DOUBLE": true,
        "BUILD_COMPLEX": false,
        "BUILD_COMPLEX16": false,
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "msvc-ifx",
      "description": "MSVC with Intel Fortran",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "inherits": ["env-vars"],
      "vendor": {
        "jetbrains.com/clion": {
          "toolchain": "Visual Studio (MSVC) with Intel Fortran"
        }
      },
      "environment": {
        "LIBRARY_PREFIX": "$env{PREFIX}/Library",
        "LD_LIBRARY_PATH": "$env{LIBRARY_PREFIX}/lib;$penv{LD_LIBRARY_PATH}",
        "PATH": "$env{LIBRARY_PREFIX}/lib;$penv{PATH}",
        "LIB": "$env{LIBRARY_PREFIX}/lib;$penv{LIB}"
      },
      "cacheVariables": {
        "BUILD_SINGLE": true,
        "BUILD_DOUBLE": true,
        "BUILD_COMPLEX": true,
        "BUILD_COMPLEX16": true,
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_PREFIX_PATH": "$env{LIBRARY_PREFIX}",
        "CMAKE_INSTALL_PREFIX": "$env{LIBRARY_PREFIX}",
        "CMAKE_C_COMPILER": "cl",
        "CMAKE_Fortran_COMPILER": "ifx",
        "MUMPS_UPSTREAM_VERSION": "5.6.2",
        "BUILD_SHARED_LIBS": "OFF",
        "LAPACK_VENDOR": "MKL",
        "MKL_DIR": "$env{LIBRARY_PREFIX}/lib",
        "intsize64": "ON",
        "gemmt": "ON",
        "metis": "ON",
        "scotch": "ON",
        "openmp": "OFF",
        "parallel": "OFF"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "configurePreset": "default"
    }
  ],
  "testPresets": [
    {
      "name": "default",
      "configurePreset": "default",
      "output": {
        "outputOnFailure": true,
        "verbosity": "verbose"
      },
      "execution": {
        "noTestsAction": "error",
        "scheduleRandom": true,
        "stopOnFailure": false,
        "timeout": 60
      }
    }
  ],
  "workflowPresets": [
    {
      "name": "default",
      "steps": [
        {
          "type": "configure",
          "name": "default"
        },
        {
          "type": "build",
          "name": "default"
        },
        {
          "type": "test",
          "name": "default"
        }
      ]
    }
  ]
}
